@model EvaluationSystemProjectFHJ.Models.Sheet

@{
    ViewBag.Title = "Create";
}
@{
    Layout = null;
}

    
@{
    var datetoday = DateTime.Now.ToString();
    var studentid = "";
    if (@Session["sessionStudentId"] == null)
    {
        Response.Redirect("~/Students/Login");

    }else
    {
        studentid = @Session["sessionStudentId"].ToString();
    }

}
<style>
    .swal2-popup {
    font-size: 1.6rem !important;
}
    .full-width {
        width: 100%;
    }

    .mywrapper {
        width: 93%;
        margin: 0 auto;
    }
</style>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/css/bootstrap.min.css">
<link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.0/js/bootstrap.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@8"></script>
<div class="full-width" style="height:200px; background-color:#1d6a3e;">
    <div class="mywrapper">
        <div class="jumbotron" style="background-color:#30302e; height:175px;">
            <center>
                <h1 style="color:#faface;">Teacher Evaluation System</h1>
            </center>
        </div>
    </div>
</div>

<div class="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()



        @Html.EditorFor(model => model.StudentID, new { htmlAttributes = new { @class = "form-control hidden", @Value = studentid } })
        <br />
        <h2><b>Evaluate your professor</b></h2>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label for="ProfessorID">Professor:</label>
                    @Html.DropDownList("ProfessorID", null, htmlAttributes: new { @class = "form-control select-add-placeholder" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label for="Subject">Subject:</label>
                    <select class="form-control" id="Subject" name="Subject"></select>
                </div>
            </div>
        </div>

        <br />
        <div class="container">
            <table class="table table-bordered table-striped">
                <thead style="background-color:#3a3a3a;color:#f9f9c9;">
                    <tr>
                        <th class="col-md-11"></th>
                        <th class="col-md-1">Rate</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td><h4><b>The instructor stimulated my interest in the subject.</b></h4></td>
                        <td>
                            <select class="form-control" id="QuestionOne" name="QuestionOne">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td><h4><b>The instructor managed classroom time and pace well.</b></h4></td>
                        <td>
                            <select class="form-control" id="QuestionTwo" name="QuestionTwo">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td><h4><b>The instructor was organized and prepared for every class.</b></h4></td>
                        <td>
                            <select class="form-control" id="QuestionThree" name="QuestionThree">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td><h4><b>The instructor used a variety of instructional methods to reach the course objectives (e.g. group discussions, student presentations, etc.)</b></h4></td>
                        <td>
                            <select class="form-control" id="QuestionFour" name="QuestionFour">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </td>
                    </tr>

                    <tr>
                        <td><h4><b>The instructor challenged students to do their best work.</b></h4></td>
                        <td>
                            <select class="form-control" id="QuestionFive" name="QuestionFive">
                                <option>1</option>
                                <option>2</option>
                                <option>3</option>
                                <option>4</option>
                            </select>
                        </td>
                    </tr>
                </tbody>

            </table>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.DateSubmitted, new { htmlAttributes = new { @class = "form-control hidden", @Value = datetoday } })
            </div>
        </div>


        <center>
            <div class="form-group">
                <input type="button" value="Submit" onclick="confirmSubmit();" id="submit" class="btn btn-success btn-lg" />

                <input type="submit" id="submitForm" class="btn btn-success btn-lg hidden" hidden/>
            </div>
        </center>

    }

    <div>
        @Html.ActionLink("Back to List", "../Students/Home")
    </div>
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Switso Company</p>
    </footer>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>

<script>

    function confirmSubmit() {
        Swal.fire({
            title: 'Submitting your form',
            text: 'Are you sure you want to submit this?',
            type: 'warning',
            showCancelButton: true,
            confirmButtonText: 'Yes',
            cancelButtonText: 'No',
            reverseButtons: true
        }).then(result => {
            if (result.value) {
                $('#submitForm').click();
            } else {
                swal.dismiss
            }
        })
    }
    

    $(document).ready(function () {
        
        $('#submit').prop('disabled', true);
        $('#Subject').change(function () {
            if ($(this).val() != '') {
                $('#submit').prop('disabled', false);
            }
        });
        
        
        $(".select-add-placeholder").prepend("<option value='' disabled selected>Select a professor...</option>");

        $("#Subject").click(function () {
            if ($("#Subject").has('option').length == 0)
            {
                Swal.fire('No professor selected', 'Please select a professor to show subjects', 'error');
            }
        });

        $('#ProfessorID').on('change', function () {
            $.ajax({
                type: "POST",
                url: "/ProfessorSubjects/getSubjectByProfessor",
                data: { id: this.value },
                success: function (data) {
                    var s = '<option value="" disabled selected>Please select a subject</option>';
                    for (var i = 0; i < data.length; i++) {
                        s += '<option value="' + data[i].ProfessorSubjects + '">' + "(" + data[i].ProfessorSubjectCode + ") " + data[i].ProfessorSubjects + '</option>';
                    }
                    $("#Subject").html(s);
                }
            });
        });

    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
